<%

invitation ||= Lato::Invitation.new

%>

<%= turbo_frame_tag 'tutorial_form-invitation' do %>
  <%= form_with model: invitation, url: main_app.invitations_create_invite_action_path, data: {
    turbo_frame: '_self',
    controller: 'lato-form'
  } do |form| %>
    <%= lato_form_notices class: %w[mb-3] %>
    <%= lato_form_errors invitation, class: %w[mb-3] %>

    <div class="mb-3">
      <%= lato_form_item_label form, :email, 'Email' %>
      <%= lato_form_item_input_email form, :email, required: true %>
    </div>

    <div class="d-flex justify-content-end">
      <%= lato_form_submit form, 'Invia invito', class: %w[btn-success] %>
    </div>
  <% end %>
<% end %>
