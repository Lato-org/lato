<div class="row">
  <div class="col col-12 col-lg-6">
    <%= lato_form_item_label form, :name %>
    <%= lato_form_item_input_text form, :name, required: true %>
  </div>

  <div class="col col-12 col-lg-6">
    <%= lato_form_item_label form, :quantity %>
    <%= lato_form_item_input_number form, :quantity, min: 1, max: 100, required: true %>
  </div>
</div>