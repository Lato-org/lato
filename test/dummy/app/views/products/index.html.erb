<%= lato_page_head 'Products', [
  { label: 'Products' }
] %>

<%= lato_index @products,
  custom_actions: {
    create: {
      path: products_create_path,
      icon: 'bi bi-plus',
      title: 'Create product',
      data: {
        controller: 'lato-tooltip',
        lato_action_target: 'trigger',
        turbo_frame: dom_id(Product.new, 'form'),
        action_rows: 8
      }
    },
    export: {
      path: products_export_action_path,
      icon: 'bi bi-download',
      title: 'Export products',
      data: {
        controller: 'lato-tooltip',
        lato_action_target: 'trigger',
        turbo_method: :post,
        turbo_frame: 'lato_operation'
      }
    },
  },
  dropdown_actions: {
    icon: 'bi bi-three-dots',
    title: 'More actions',
    data: {
      controller: 'lato-tooltip',
    },
    actions: [
      {
        path: '#',
        icon: 'bi bi-trash',
        title: 'Example 1',
        data: {
          custom: 'value',
        }
      },
      {
        path: '#',
        icon: 'bi bi-download',
        title: 'Example 2',
        data: {
          custom: 'value',
        }
      }
    ]
  },
  pagination_options: [10,20,50,100],
  skip_total_count: true
%>

<% if defined? @lato_users %>
  <%= lato_index @lato_users, key: 'lato_users' %>
<% end %>
